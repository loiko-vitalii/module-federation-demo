{
  "name": "module-federation-demo",
  "private": "true",
  "version": "1.0.0",
  "scripts": {
    "preinstall": "pnpm install --ignore-scripts",
    "start": "pnpm -r --parallel dev",
    "build": "pnpm run --filter module-federation-demo_* build",
    "preview": "pnpm run --filter module-federation-demo_* --parallel preview",
    "e2e-tests": "playwright test",
    "e2e-tests-ui": "playwright test --ui",
    "e2e-codegen": "playwright codegen http://localhost:3000"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.14.1"
  }
}
